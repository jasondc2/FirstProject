<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_display_scripture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jason.scripturereference.displayScripture"
    tools:showIn="@layout/activity_display_scripture">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtBook"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtChapter" />

    <TextView
        android:text="Your Favorite Scripture Is:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="86dp"
        android:id="@+id/textView5"
        android:layout_above="@+id/txtChapter"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtChapter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:id="@+id/btnClose" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="211dp"
        android:id="@+id/txtBook"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/txtChapter"
        android:layout_toStartOf="@+id/txtChapter" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtVerse"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/txtChapter"
        android:layout_toEndOf="@+id/txtChapter" />
</RelativeLayout>
